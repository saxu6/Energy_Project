# Energy Consumption Analyzer - Environment Variables

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
PORT=8000
HOST=0.0.0.0

# Data Paths
DATA_BASE_PATH=/app/months
MODELS_PATH=/app/models

# ML Model Settings
ANOMALY_CONTAMINATION=0.1
ANOMALY_CONFIDENCE_THRESHOLD=0.5
MODEL_SAVE_INTERVAL=3600

# API Settings
API_TIMEOUT=30
MAX_FILE_SIZE=10485760  # 10MB

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# AWS Settings (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=energy-analyzer-data
S3_MODELS_BUCKET=energy-analyzer-models

# Database (if using external database)
DATABASE_URL=postgresql://user:password@localhost/energy_db

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
